{
  "screen": "login",
  "title": {
    "text": "Login",
    "style": {
      "color": "#333",
      "fontSize": 24,
    }
  },
  "elements": [
    {
      "type": "label",
      "text": "Log in to your account",
      "style": {
        "color": "#555",
        "fontSize": 18
      }
    },
    {
      "type": "text_input",
      "placeholder": "Username",
      "key": "username",
      "style": {
        "backgroundColor": "#f0f0f0",
        "fontSize": 16
      }
    },
    {
      "type": "text_input",
      "placeholder": "Password",
      "key": "password",
      "secure": true,
      "style": {
        "backgroundColor": "#f0f0f0",
        "fontSize": 16
      }
    },
    {
      "type": "button",
      "text": "Log In",
      "action": "login",
      "style": {
        "backgroundColor": "#0074cc",
        "color": "#fff",
        "fontSize": 18,
      }
    },
    {
      "type": "button",
      "text": "Forgot Password?",
      "action": "forgot_password",
      "style": {
        "color": "#0074cc",
        "fontSize": 14,
      }
    }
  ]
}

